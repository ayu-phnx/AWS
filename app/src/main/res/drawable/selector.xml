<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/bg_screen1"
        android:color="@color/colorPrimary" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@color/dot_dark_screen2"
        android:color="@color/colorPrimaryDark"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/bg_screen1"
        android:color="@color/colorPrimary"/>
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@color/dot_dark_screen2"
        android:color="@color/colorPrimaryDark"/>

    <!-- Pressed -->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@color/bg_screen1"
        android:color="@color/colorPrimary"/>
    <item android:state_pressed="true" android:drawable="@color/dot_dark_screen2"
        android:color="@color/colorPrimaryDark" />

</selector>