<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="#ffffff" >



    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/transparent_style">
        <TextView
            android:id="@+id/Monitor_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Dashboard"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"/>

    <Button android:id="@+id/btnLogout"
        android:background="@drawable/log_out_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/Monitor_heading"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"

        />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/wet_monitor"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/transparent_style2"
        android:src="@drawable/wet_waste"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/metal_monitor"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_below="@+id/top_bar"
        android:layout_toRightOf="@id/wet_monitor"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/transparent_style2"
        android:src="@drawable/metal_waste"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/plastic_monitor"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_below="@+id/wet_monitor"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/transparent_style2"
        android:src="@drawable/plastic_waste"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/conveyor_monitor"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_below="@+id/metal_monitor"
        android:layout_toRightOf="@id/plastic_monitor"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/transparent_style2"
        android:src="@drawable/factory"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />



</RelativeLayout>