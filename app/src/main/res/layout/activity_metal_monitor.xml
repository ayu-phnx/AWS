<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_light_screen3"
    tools:context=".metal_monitor">
    <ImageView
        android:id="@+id/counter_metal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twentyfive"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/counter_metal"
        android:text="Metal Bin Collection"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:text="@string/metal"
        android:textAlignment="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="20sp"/>

</RelativeLayout>